{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "es2020",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      
      
      "noEmit": true, 
      
      "allowImportingTsExtensions": true, 
      "resolveJsonModule": true 
    },
    "include": ["src/**/*"]
  }